# BANCO DE DADOS (Prisma)
# URL de conexão com o PostgreSQL (formato: postgresql://user:password@host:port/db_name)
DATABASE_URL="postgresql://postgres:password@localhost:5432/healthfirst"

# AUTENTICAÇÃO (NextAuth.js)
# URL base da aplicação (em produção, usar o domínio real)
NEXTAUTH_URL="http://localhost:3000"

# Chave secreta para criptografar sessões (Gere uma forte com: openssl rand -base64 32)
NEXTAUTH_SECRET="chavedesessaoaleatoria1234567890"

# Chaves para login com provedores OAuth (Google, Apple, etc.)
GOOGLE_CLIENT_ID="sua-client-id-do-google"
GOOGLE_CLIENT_SECRET="seu-client-secret-do-google"

APPLE_ID="seu-service-id-apple"
APPLE_SECRET="seu-client-secret-gerado-apple"

# WHATSAPP CLOUD API (Meta)
# Versão da API (ex: v21.0)
META_API_VERSION="v21.0"

# ID do número de telefone (Do painel do WhatsApp Business)
WHATSAPP_PHONE_ID="123456789012345"

# Token de acesso (Token Permanente do Sistema ou Temporário de Dev)
WHATSAPP_API_TOKEN="EAA..."

# PAGAMENTOS (Mercado Pago)
# Token de acesso de produção ou teste (Começa com APP_USR- ou TEST-)
MERCADO_PAGO_ACCESS_TOKEN="TEST-123456-123456-123456..."

# Chave pública (opcional, dependendo se usa o SDK no front)
MERCADO_PAGO_PUBLIC_KEY="TEST-123456..."

# Segredo do Webhook (para validar notificações de pagamento em /api/webhooks/mercado-pago)
MERCADO_PAGO_WEBHOOK_SECRET="whsec_..."

# Redis (Banco de dados em memória usado em conjunto com o rate limit)
UPSTASH_REDIS_REST_URL="https://..."
UPSTASH_REDIS_REST_TOKEN="AAAAaaaa..."

# OUTROS / GERAIS
# Ambiente (development, production, test)
NODE_ENV="development"