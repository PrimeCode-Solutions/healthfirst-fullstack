// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum para tipos de usuário
enum UserRole {
  ADMIN
  DOCTOR
  USER
}

// Enum para status de categoria
enum CategoryStatus {
  ACTIVE
  INACTIVE
}

// Enum para status do agendamento
enum AppointmentStatus {
  PENDING     // Aguardando pagamento
  CONFIRMED   // Pagamento confirmado
  CANCELLED   // Cancelado
  COMPLETED   // Concluído
  CANCELLATION_REQUESTED // Cancelamento Solicitado
}

// Enum para status da requisição de cancelamento
enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

// Enum para status do pagamento
enum PaymentStatus {
  PENDING
  APPROVED
  CONFIRMED
  REJECTED
  CANCELLED
  REFUNDED
}

// Enum para status da assinatura
enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  CANCELLED
  EXPIRED
}

// Model do usuário 
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  phone     String
  password  String   // Senha criptografada (hash)
  role      UserRole @default(USER)

  // Campos novos para recuperação de senha
  resetPasswordToken   String?   @unique
  resetPasswordExpires DateTime?
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relações
  appointments        Appointment[] @relation("PatientAppointments")
  doctorAppointments  Appointment[] @relation("DoctorAppointments")
  patientHistory      AppointmentHistory[] @relation("PatientHistory")
  doctorHistory       AppointmentHistory[] @relation("DoctorHistory")
  subscription   Subscription?
  ebookAccess    UserEbookAccess[]
  businessHours BusinessHours?
  
  @@map("users")
}

// Model para categorias de ebooks
model EbookCategory {
  id          String         @id @default(cuid())
  name        String         @unique
  description String?
  status      CategoryStatus @default(ACTIVE)
  
  // Timestamps
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  
  // Relações
  ebooks      Ebook[]
  
  @@map("ebook_categories")
}

model CancellationRequest {
  id            String        @id @default(cuid())
  appointmentId String        @unique 
  reason        String?       
  adminNotes    String?       
  status        RequestStatus @default(PENDING)
  
  requestedAt   DateTime      @default(now())
  reviewedAt    DateTime?

  // O lado que guarda a chave estrangeira (appointmentId)
  appointment   Appointment   @relation(fields: [appointmentId], references: [id])

  @@map("cancellation_requests")
}

model ConsultationType {
  id          String   @id @default(cuid())
  name        String   // Ex: "Consulta Geral", "Cardiologia"
  price       Decimal  @db.Decimal(10, 2)
  description String?
  duration    Int      @default(30)
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relação inversa
  appointments Appointment[]

  @@map("consultation_types")
}

// Model para ebooks
model Ebook {
  id              String        @id @default(cuid())
  title           String
  description     String?
  author          String
  coverImage      String?       // URL da imagem de capa
  fileUrl         String        // URL do arquivo PDF/EPUB
  isPremium       Boolean       @default(false)
  price           Decimal?      @db.Decimal(10,2)
  categoryId      String
  
  // Metadados do arquivo
  fileSize        Int?          // Tamanho em bytes
  fileType        String        // "pdf", "epub", "mobi"
  
  // Configurações
  isActive        Boolean       @default(true)
  downloadCount   Int           @default(0)
  viewCount       Int           @default(0)
  
  // Timestamps
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  // Relações
  category        EbookCategory @relation(fields: [categoryId], references: [id])
  userAccess      UserEbookAccess[]
  
  @@map("ebooks")
}

// Model para controle de acesso aos ebooks
model UserEbookAccess {
  id            String   @id @default(cuid())
  userId        String
  ebookId       String
  
  // Controle de acesso
  downloadCount Int      @default(0)
  lastDownload  DateTime?
  
  // Timestamps
  firstAccess   DateTime @default(now())
  lastAccess    DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relações
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  ebook         Ebook    @relation(fields: [ebookId], references: [id], onDelete: Cascade)
  
  @@unique([userId, ebookId])
  @@map("user_ebook_access")
}

model BusinessHours {
  id        String   @id @default(cuid())
  
  // --- Vínculo com o Médico
  doctorId  String   @unique 
  doctor    User     @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  // --- Campos de Horários
  startTime         String    
  endTime           String    
  lunchBreakEnabled Boolean   @default(false)
  lunchStartTime    String?
  lunchEndTime      String?
  
  mondayEnabled     Boolean   @default(true)
  tuesdayEnabled    Boolean   @default(true)
  wednesdayEnabled  Boolean   @default(true)
  thursdayEnabled   Boolean   @default(true)
  fridayEnabled     Boolean   @default(true)
  saturdayEnabled   Boolean   @default(false)
  sundayEnabled     Boolean   @default(false)
  
  appointmentDuration Int     @default(30)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@map("business_hours")
}

model Appointment {
  id          String            @id @default(cuid())
  userId      String
  doctorId    String?
  
  date        DateTime
  startTime   String
  endTime     String
  videoUrl    String?
  
  consultationTypeId String
  consultationType   ConsultationType @relation(fields: [consultationTypeId], references: [id])

  status      AppointmentStatus @default(PENDING)
  
  // Valor cobrado no momento do agendamento (Snapshot do preço)
  amount      Decimal           @db.Decimal(10, 2)
  
  patientName  String
  patientEmail String?
  patientPhone String?
  notes        String?
  
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  
  user        User      @relation("PatientAppointments", fields: [userId], references: [id], onDelete: Cascade)
  doctor      User?     @relation("DoctorAppointments", fields: [doctorId], references: [id])
  payment     Payment?

  cancellationRequest CancellationRequest?

  @@map("appointments")
}

// Model para pagamentos
model Payment {
  id                    String        @id @default(cuid())
  appointmentId         String?       @unique
  subscriptionId        String?       
  
  // Dados do Mercado Pago
  mercadoPagoId         String?       @unique // ID do pagamento no MP
  preferenceId          String?       // ID da preferência no MP
  
  // Dados do pagamento
  amount                Decimal       @db.Decimal(10,2)
  currency              String        @default("BRL")
  description           String
  status                PaymentStatus @default(PENDING)
  paymentMethod         String?
  
  // Dados do pagador
  payerEmail            String?
  payerName             String?
  payerPhone            String?
  
  // URLs de retorno
  successUrl            String?
  pendingUrl            String?
  failureUrl            String?
  
  // Timestamps
  paidAt                DateTime?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  
  // Relações
  appointment           Appointment?  @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  subscription          Subscription? @relation(fields: [subscriptionId], references: [id])
  
  @@map("payments")
}

// Model para assinaturas
model Subscription {
  id                  String             @id @default(cuid())
  userId              String             @unique
  
  // Dados da assinatura no Mercado Pago
  mercadoPagoId       String?            @unique
  preapprovalId       String             // ID da assinatura recorrente no MP (OBRIGATÓRIO)
  
  // Dados básicos
  planName            String?
  amount              Decimal?           @db.Decimal(10,2)
  currency            String             @default("BRL")
  status              SubscriptionStatus @default(INACTIVE)
  
  // Apenas para controle local
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  
  // Relações
  user                User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  payments            Payment[]
  
  @@map("subscriptions")
}

// Model para webhooks do Mercado Pago
model WebhookEvent {
  id            String   @id @default(cuid())
  action        String
  apiVersion    String
  dataId        String
  dateCreated   DateTime
  type          String
  rawData       Json
  processed     Boolean  @default(false)
  createdAt     DateTime @default(now())
  
  @@map("webhook_events")
}

model ProcessedWebhookEvent {
  id          String     @id @default(cuid())
  eventId     String     @unique        //ID único do evento Mercado Pago (vem como "id" no payload)
  type        String                   //"subscription", "payment", etc
  action      String?                  // "payment.created", "payment.update", ect
  processed   Boolean    @default(false)
  processedAt DateTime?                // Quando foi realizado o proceso com sucesso
  attempts    Int        @default(1)   // Contador de tentativas
  error       String?    @db.Text      // Armazena falha, caso houver
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  @@index([eventId])
  @@index([processed])
  @@map("processed_webhook_events")
}

model AppointmentHistory {
  id          String   @id @default(cuid())
  originalId  String? 
  
  userId      String   
  doctorId    String? 
  
  date        DateTime
  status      String   
  reason      String   
  amount      Decimal? @db.Decimal(10,2)
  
  archivedAt  DateTime @default(now())

  user        User      @relation("PatientHistory", fields: [userId], references: [id], onDelete: Cascade)
  doctor      User?     @relation("DoctorHistory", fields: [doctorId], references: [id])

  @@map("appointment_history")
}